{% extends 'base.html.twig' %}

{% block title %}{{ series is defined ? 'Editar' : 'Nova' }} Série{% endblock %}

{% block body %}
    <form method="post" {{ series is defined ? path('') : path('app_add_series')}}>
        <div class="mb-3">
            <label for="name" class="form-label">Nome da série:</label>
            <input type="text" name="name" id="name" class="form-control" value="{{ series is defined ? series.name : '' }}">
        </div>

        <button class="btn btn-dark">
    
        {{ series is defined ? 'Editar': 'Adicionar'}}
        </button>
        
    </form>
{% endblock %}